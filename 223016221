package com.mycompany.assignments;

/**
 *
 * @author educa
 */
import java.util.Scanner;
public class Assignments {
    public static void main(String[] args) {
        // Step 1: Create a Scanner object for input
        Scanner sc = new Scanner(System.in);

        // Step 2: Ask the user to enter a number
        System.out.print("Enter a number: ");
        int number = sc.nextInt();

        // Step 3: Check if the number is odd or even using modulus operator
        if (number % 2 == 0) {
            // Step 4: Display the result if the number is even
            System.out.println(number + " is an even number.");
        } else {
            // Step 5: Display the result if the number is odd
            System.out.println(number + " is an odd number.");
        }

    }
}

